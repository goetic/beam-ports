#!/usr/bin/env sh

get_arch() {
  echo "$(uname -p)"
}

main() {
  local arch="$(get_arch)"

  ./bin/update
  echo

  echo "== Building 14.3-RELEASEâ€¦" >&2
  poudriere bulk -f packages-default -O beam -j "143${arch}"
  echo

  echo "== Building 15.0-RELEASEâ€¦" >&2
  poudriere bulk -f packages-default -O beam -j "150${arch}"
}

main
