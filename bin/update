#!/usr/bin/env sh

BOLD='\033[1m'
RED='\033[31m'
RESET='\033[0m'

get_arch() {
  echo "$(uname -p)"
}

main() {
  local arch="$(get_arch)"

  printf "${BOLD}== Updating default ports tree…${RESET}\n" >&2
  poudriere ports -u
  echo

  printf "${BOLD}== Updating 14.3-RELEASE jail…${RESET}\n" >&2
  poudriere jail -u -j "143${arch}"
  echo

  printf "${BOLD}== Updating 15.0-RELEASE jail…${RESET}\n" >&2
  poudriere jail -u -j "150${arch}"
  echo
}

main
