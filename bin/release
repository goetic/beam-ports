#!/usr/bin/env sh

BOLD='\033[1m'
RED='\033[31m'
RESET='\033[0m'

get_arch() {
  echo "$(uname -p)"
}

upload_packages() {
  local version=$1
  local jail=$2
  local arch=$3

  aws s3 sync --delete \
    "/usr/local/poudriere/data/packages/${jail}-default/.latest/" \
    "s3://goetic-pkg/beam/freebsd/FreeBSD:${version}:${arch}/latest/"
}

usage() {
  cat << EOF
Usage: $0

This script requires the following environment variables to be set:

- AWS_ACCESS_KEY_ID
- AWS_SECRET_ACCESS_KEY
- AWS_DEFAULT_REGION
EOF
}

validate_env() {
  if [ -z "${AWS_ACCESS_KEY_ID}" ]; then
    printf "${RED}Error! Missing env: ${BOLD}AWS_ACCESS_KEY_ID${RESET}\n" >&2
    return 1
  fi
  if [ -z "${AWS_SECRET_ACCESS_KEY}" ]; then
    printf "${RED}Error! Missing env: ${BOLD}AWS_SECRET_ACCESS_KEY${RESET}\n" >&2
    return 1
  fi
  if [ -z "${AWS_DEFAULT_REGION}" ]; then
    printf "${RED}Error! Missing env: ${BOLD}AWS_DEFAULT_REGION${RESET}\n" >&2
    return 1
  fi
}

main() {
  local arch="$(get_arch)"

  if ! validate_env; then
    usage
    exit 1
  fi

  printf "${BOLD}== Building packages…${RESET}\n" >&2
  ./bin/build
  echo

  printf "${BOLD}== Cleaning logs…${RESET}\n" >&2
  poudriere logclean -y -a -j "143${arch}"
  poudriere logclean -y -a -j "150${arch}"
  echo

  printf "${BOLD}== Uploading 14.3-RELEASE packages…${RESET}\n" >&2
  upload_packages "14" "143${arch}" "${arch}"
  echo

  printf "${BOLD}== Uploading 15.0-RELEASE packages…${RESET}\n" >&2
  upload_packages "15" "150${arch}" "${arch}"
  echo
}

main
